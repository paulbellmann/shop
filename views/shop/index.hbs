{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <img src="{{ imagePath }}" alt="..." class="img-responsive">
                <div class="caption">
                  <h3>{{ title }}</h3>
                  <p class="description">{{ description }}</p>
                  <div class="clearfix">
                      <div class="price pull-left">{{ price }}$</div>
                      <div class="pull-right">
                        <a href="/info?id={{_id}}" class="btn btn-primary" role="button">Info</a>
                        <a href="#" class="btn btn-success" role="button">Add</a>
                      </div>
                  </div>
                </div>
              </div>
            </div>
        {{/each }}
    </div>
{{/each }}


<script>
  {{# if active }}
      $('#{{ active }}').addClass('active')
  {{/if}}
</script>